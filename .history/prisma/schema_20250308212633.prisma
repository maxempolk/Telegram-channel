generator client {
  provider = "prisma-client-js"
}

// Настройки источника данных (SQLite)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Локальный файл базы данных
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  imagesUrl String
  tags      String
}
