generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  images    File[]
  tags      String
}

model File {
  id        Int      @id @default(autoincrement())
  filename  String // Имя файла
  path      String // Путь к файлу или URL
  mimeType  String // Тип файла (image/jpeg, image/png и т.д.)
  size      Int // Размер файла в байтах
  content   Bytes? // Опционально: содержимое файла, если хранится в БД
  createdAt DateTime @default(now())
  postId    Int // Внешний ключ к посту
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}
